{
  "name": "RAGBASE",
  "version": "0.1.0",
  "description": "RAGBASE is a local RAG application.",
  "author": "RAGBASE",
  "main": "electron/dist/main.js",
  "scripts": {
    "dev": "npm rebuild && next dev --turbopack",
    "build": "npm rebuild && next build && npm run build:tasks",
    "build:tasks": "tsc -p tsconfig.tasks.json",
    "start": "npm run build && next start",
    "lint": "next lint",
    "clean": "rm -rf .next dist electron/dist out node_modules/.cache",
    "electron:dev": "npm run electron:build && npm run build:tasks && LANCEDB_LOG=error NODE_NO_WARNINGS=1 electron .",
    "electron:build": "npx electron-rebuild -f && rm -rf electron/dist && tsc -p electron/tsconfig.json",
    "electron:start": "npm run electron:build && npm run build:tasks &&  LANCEDB_LOG=error NODE_NO_WARNINGS=1 electron-forge start",
    "package": "npm run clean && npm run electron:build && npm run build:tasks && NODE_NO_WARNINGS=1 electron-forge package",
    "dist": "npm run clean && npm run build && npm run electron:build && NODE_NO_WARNINGS=1 electron-forge make",
    "test": "vitest",
    "db:migrate": "npm rebuild && drizzle-kit migrate",
    "db:generate": "drizzle-kit generate",
    "db": "npm run db:generate && npm run db:migrate"
  },
  "dependencies": {
    "@lancedb/lancedb": "^0.12.0",
    "@langchain/community": "^0.3.48",
    "@langchain/core": "^0.3.62",
    "@langchain/ollama": "^0.2.3",
    "@langchain/openai": "^0.5.18",
    "@langchain/textsplitters": "^0.1.0",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-slot": "^1.2.3",
    "@types/uuid": "^10.0.0",
    "apache-arrow": "^14.0.2",
    "better-sqlite3": "^12.1.1",
    "chokidar": "^4.0.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.2",
    "langchain": "^0.3.29",
    "lucide-react": "^0.522.0",
    "next": "15.3.4",
    "next-intl": "^4.3.4",
    "pdf-parse": "^1.1.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-markdown": "^10.1.0",
    "react-syntax-highlighter": "^15.6.1",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^3.3.1",
    "uuid": "^11.1.0",
    "vectordb": "^0.21.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.1",
    "@electron-forge/maker-deb": "^7.8.1",
    "@electron-forge/maker-dmg": "^7.8.1",
    "@electron-forge/maker-rpm": "^7.8.1",
    "@eslint/eslintrc": "^3",
    "@next/eslint-plugin-next": "^15.3.4",
    "@tailwindcss/postcss": "^4",
    "@types/better-sqlite3": "^7.6.13",
    "@types/electron": "^1.6.12",
    "@types/node": "^20.19.1",
    "@types/pdf-parse": "^1.1.5",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@types/supertest": "^6.0.3",
    "@vitest/ui": "^3.2.4",
    "electron": "^37.1.0",
    "electron-forge-maker-appimage": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9",
    "eslint-config-next": "15.3.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "supertest": "^7.1.1",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "tw-animate-css": "^1.3.4",
    "typescript": "^5",
    "vitest": "^3.2.4"
  },
  "build": {
    "appId": "com.ragbase.desktop",
    "icon": "public/icon.png",
    "productName": "RAGBASE",
    "directories": {
      "output": "out"
    },
    "files": [
      "electron/",
      "src/",
      "public/",
      "package.json",
      "next.config.ts",
      "node_modules/",
      ".next/"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    },
    "asar": true
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "public/icon.icns",
        "out": "out"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-dmg",
          "platforms": [
            "darwin"
          ],
          "config": {}
        },
        {
          "name": "@electron-forge/maker-deb",
          "platforms": [
            "linux"
          ],
          "config": {
            "icon": "public/icon.png"
          }
        }
      ]
    }
  }
}

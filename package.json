{
  "name": "RAGBASE",
  "version": "0.1.0",
  "description": "RAGBASE is a local RAG application.",
  "author": "RAGBASE",
  "main": "src-tauri/target/release/ragbase",
  "scripts": {
    "dev": "npm rebuild && next dev --turbopack",
    "build": "npm rebuild && next build && npm run build:tasks && npm run copy:drizzle",
    "build:tasks": "tsc -p tsconfig.tasks.json",
    "start": "npm run build && next start",
    "lint": "next lint",
    "tauri:dev": "npm run build:tasks && tauri dev",
    "tauri:build": "tauri build",
    "test": "vitest",
    "db:migrate": "npm rebuild && drizzle-kit migrate",
    "db:generate": "drizzle-kit generate",
    "db": "npm run db:generate && npm run db:migrate",
    "copy:drizzle": "cp -r src/db/drizzle dist/db/"
  },
